= render 'shared/leh_header'
.mypage_wrapper
  .mypage_main
    .mypage_contents_head
      %ul.mypage_contents_number_list
        %li.mypage_contents_number
          = "お気に入りした場所 #{@user.favorites.length.to_s(:delimited)}"
        %li.mypage_contents_number
          = "口コミ数 #{@user.reviews.length.to_s(:delimited)}"
        %li.mypage_contents_number
          = "行った場所 #{@user.histories.length.to_s(:delimited)}"
    .mypage_contents_main
      .mypage_contents_main_left
        .mypage_user_setting_wrapper
          %ul.mypage_user_side_list
            %li.mypage_user_side
              = link_to '会員情報の確認・変更', edit_user_registration_path , class: 'mypage_user_side_text'
            %li.mypage_user_side
              = link_to 'お気に入りした場所', user_favorites_path(current_user.id), class: 'mypage_user_side_text'
            %li.mypage_user_side
              = link_to '今までの口コミ', '#', class: 'mypage_user_side_text'
            %li.mypage_user_side
              = link_to '行った場所', user_histories_path(current_user.id), class: 'mypage_user_side_text'
      -# マイページのメイン部分の表示をコントローラーとアクションによって変える。
      = render partial: 'shared/mypage_main_contents', locals: { user: @user, favorites: @favorites }
      -# マイページのメイン部分の表示をコントローラーとアクションによって変える。
= render 'shared/leh_footer'
